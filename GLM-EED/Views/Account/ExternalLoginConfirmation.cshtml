@model GLM_EED.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = "Registro";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Asocia una cuenta a @ViewBag.ProviderDisplayName.</h2>
</hgroup>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Formulario de asociación</legend>
        <p>
            Usted se ha autenticado exitosamente con <strong>@ViewBag.ProviderDisplayName</strong>.
            Por favor introduzca su nombre de usuario en la parte de abajo y haga click en el boton confirmar para terminar de iniciar sesión.
        </p>
        <ol>
            <li class="name">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="Confirmar" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
